<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tododo.controller.RegisterController" 
           style="-fx-background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -fx-min-width: 400; -fx-min-height: 600;">
    
    <!-- Main Card Container -->
    <VBox alignment="CENTER" spacing="25" maxWidth="350" maxHeight="500"
          style="-fx-background-color: rgba(255, 255, 255, 0.95); 
                 -fx-background-radius: 20; 
                 -fx-padding: 40 30 40 30; 
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0.3, 0, 8);">
        
        <!-- Header Section -->
        <VBox alignment="CENTER" spacing="8">
            <!-- Icon Container -->
            <StackPane prefWidth="80" prefHeight="80"
                       style="-fx-background-color: linear-gradient(135deg, #667eea, #764ba2); 
                              -fx-background-radius: 40; 
                              -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.4), 15, 0.3, 0, 4);">
                <Label text="ðŸ‘¤" style="-fx-font-size: 36px;"/>
            </StackPane>
            
            <!-- Title -->
            <Label text="Create Account" 
                   style="-fx-font-size: 28px; 
                          -fx-font-weight: bold; 
                          -fx-text-fill: #2c3e50;"/>
            
            <!-- Subtitle -->
            <Label text="Sign up to get started" 
                   style="-fx-font-size: 14px; 
                          -fx-text-fill: #7f8c8d; 
                          -fx-font-weight: 300;"/>
        </VBox>
        
        <!-- Form Section -->
        <VBox spacing="18" alignment="CENTER" prefWidth="280">
            
            <!-- Username Field Container -->
            <VBox spacing="5">
                <Label text="Username" 
                       style="-fx-font-size: 12px; 
                              -fx-text-fill: #5a6c7d; 
                              -fx-font-weight: 600; 
                              -fx-padding: 0 0 0 5;"/>
                <TextField fx:id="usernameField" promptText="Enter your username"
                          prefHeight="45"
                          style="-fx-background-color: #f8f9fa; 
                                 -fx-border-color: #e9ecef; 
                                 -fx-border-width: 1.5; 
                                 -fx-border-radius: 8; 
                                 -fx-background-radius: 8; 
                                 -fx-padding: 0 15; 
                                 -fx-font-size: 14px;
                                 -fx-prompt-text-fill: #adb5bd;
                                 -fx-text-fill: #495057;"/>
            </VBox>
            
            <!-- Email Field Container -->
            <VBox spacing="5">
                <Label text="Email Address" 
                       style="-fx-font-size: 12px; 
                              -fx-text-fill: #5a6c7d; 
                              -fx-font-weight: 600; 
                              -fx-padding: 0 0 0 5;"/>
                <TextField fx:id="emailField" promptText="Enter your email"
                          prefHeight="45"
                          style="-fx-background-color: #f8f9fa; 
                                 -fx-border-color: #e9ecef; 
                                 -fx-border-width: 1.5; 
                                 -fx-border-radius: 8; 
                                 -fx-background-radius: 8; 
                                 -fx-padding: 0 15; 
                                 -fx-font-size: 14px;
                                 -fx-prompt-text-fill: #adb5bd;
                                 -fx-text-fill: #495057;"/>
            </VBox>
            
            <!-- Password Field Container -->
            <VBox spacing="5">
                <Label text="Password" 
                       style="-fx-font-size: 12px; 
                              -fx-text-fill: #5a6c7d; 
                              -fx-font-weight: 600; 
                              -fx-padding: 0 0 0 5;"/>
                <PasswordField fx:id="passwordField" promptText="Create a password"
                              prefHeight="45"
                              style="-fx-background-color: #f8f9fa; 
                                     -fx-border-color: #e9ecef; 
                                     -fx-border-width: 1.5; 
                                     -fx-border-radius: 8; 
                                     -fx-background-radius: 8; 
                                     -fx-padding: 0 15; 
                                     -fx-font-size: 14px;
                                     -fx-prompt-text-fill: #adb5bd;
                                     -fx-text-fill: #495057;"/>
            </VBox>
        </VBox>
        
        <!-- Button Section -->
        <VBox spacing="15" alignment="CENTER" prefWidth="280">
            <!-- Register Button -->
            <Button text="Create Account" onAction="#handleRegister"
                    prefWidth="280" prefHeight="50"
                    style="-fx-background-color: linear-gradient(135deg, #667eea, #764ba2); 
                           -fx-text-fill: white; 
                           -fx-font-size: 16px; 
                           -fx-font-weight: bold; 
                           -fx-background-radius: 12; 
                           -fx-border-radius: 12;
                           -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.4), 12, 0.3, 0, 3);
                           -fx-cursor: hand;">
                <effect>
                    <DropShadow color="rgba(102,126,234,0.4)" radius="12" offsetY="3"/>
                </effect>
            </Button>
            
            <!-- Divider -->
            <HBox alignment="CENTER" spacing="10" prefWidth="280">
                <Separator prefWidth="100" style="-fx-background-color: #dee2e6;"/>
                <Label text="or" style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
                <Separator prefWidth="100" style="-fx-background-color: #dee2e6;"/>
            </HBox>
            
            <!-- Login Link -->
            <Hyperlink text="Already have an account? Sign in" onAction="#handleLoginLink"
                      style="-fx-text-fill: #667eea; 
                             -fx-font-size: 14px; 
                             -fx-font-weight: 500;
                             -fx-underline: false;
                             -fx-border-color: transparent;"/>
        </VBox>
    </VBox>
</StackPane>