<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.tododo.controller.AddTaskDialogController" style="-fx-padding: 20;">
    <Label text="Tambah Tugas Baru" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <TextField fx:id="judulField" promptText="Judul Tugas" />
    <TextArea fx:id="deskripsiField" promptText="Deskripsi" prefRowCount="3"/>
    <DatePicker fx:id="deadlinePicker" />

    <ComboBox fx:id="statusComboBox" promptText="Pilih Status">
    </ComboBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Batal" onAction="#handleCancel" />
        <Button text="Simpan" onAction="#handleSave" defaultButton="true"/>
    </HBox>
</VBox>
